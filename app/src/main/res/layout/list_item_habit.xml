<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="6dp">

    <RelativeLayout
        android:padding="10dp"
        android:id="@+id/habit_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/habit_list_item_name"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/habit_list_item_description"
            android:layout_below="@id/habit_list_item_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/habit_list_item_priority"
            android:layout_alignParentEnd="true"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/habit_list_item_type"
            android:layout_below="@id/habit_list_item_priority"
            android:layout_alignEnd="@id/habit_list_item_priority"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/habit_list_item_quantity"
            android:layout_below="@id/habit_list_item_type"
            android:layout_alignEnd="@id/habit_list_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/habit_list_item_periodicity"
            android:layout_below="@id/habit_list_item_quantity"
            android:layout_alignEnd="@id/habit_list_item_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </RelativeLayout>
</androidx.cardview.widget.CardView>